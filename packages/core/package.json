{
  "name": "@squoosh-kit/core",
  "version": "0.0.4",
  "type": "module",
  "description": "Per-feature adapters around Squoosh codecs, worker/client runtimes.",
  "author": "Bartosz Nowak <bnowak008@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bnowak008/squoosh-kit.git"
  },
  "homepage": "https://github.com/bnowak008/squoosh-kit#readme",
  "bugs": {
    "url": "https://github.com/bnowak008/squoosh-kit/issues"
  },
  "keywords": [
    "squoosh",
    "webp",
    "image",
    "resize",
    "wasm",
    "bun",
    "typescript",
    "worker",
    "codec",
    "compression",
    "image-processing",
    "web-assembly",
    "modern",
    "lightweight"
  ],
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./webp": {
      "types": "./dist/features/webp/index.d.ts",
      "import": "./dist/features/webp/index.js"
    },
    "./resize": {
      "types": "./dist/features/resize/index.d.ts",
      "import": "./dist/features/resize/index.js"
    }
  },
  "files": [
    "dist/**",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "copy:assets": "bun run scripts/copy-assets.ts",
    "build:declarations": "tsc",
    "build:code": "bun build --sourcemap --minify --format=esm --splitting --target=bun --outdir=dist src/index.ts",
    "build": "bun run copy:assets && bun run build:declarations && bun run build:code",
    "build:production": "bun run build",
    "prepublishOnly": "bun run build && bun test",
    "test": "bun test",
    "clean:local": "rm -rf dist *.tsbuildinfo",
    "prepack": "bun run build"
  },
  "dependencies": {
    "@squoosh-kit/webp": "workspace:*",
    "@squoosh-kit/resize": "workspace:*"
  }
}
