{
  "compilerOptions": {
    // Environment setup & latest features
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "Preserve",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@squoosh-kit/avif": ["../../packages/avif/src"],
      "@squoosh-kit/mozjpeg": ["../../packages/mozjpeg/src"],
      "@squoosh-kit/jxl": ["../../packages/jxl/src"],
    },

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false
  },
  "references": [
    { "path": "../../packages/core" },
    { "path": "../../packages/avif" },
    { "path": "../../packages/mozjpeg" },
    { "path": "../../packages/jxl" },
  ],
  "include": ["src", "build.ts", "index.html"],
  "exclude": ["dist", "node_modules"]
}
