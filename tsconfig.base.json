{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "lib": ["ES2022", "DOM"],
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "types": ["bun"],
    "baseUrl": ".",
    "paths": {
      "@squoosh-kit/*": ["packages/*/src"]
    }
  },
  "exclude": ["node_modules", "dist", "wasm", ".squoosh-temp"]
}
